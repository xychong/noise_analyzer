        <object data="/public/audio_info.txt" width="85%"></object>
      </div>
      <div class="w3-row">
        <div class="w3-half">
          <br><br>
          <button class="w3-button w3-black w3-padding-large w3-large w3-margin-top" onclick="document.getElementById('id04').style.display='none'">Close</button>
